{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["ES2018"],
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "useDefineForClassFields": false,
      "outDir": "lib",
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }